
@model ResetPasswordModel
<style type="text/css">
    header, footer {
        display: none;
    }
</style>
<div class="resetpassword-page">
    <div class="resetpassword-body">
        <div class="resetpwd-inner">
            <h1>Forgot password</h1>
            <div class="resetpwd-header">
                <img src="~/images/lock-icon.svg" alt="" />
            </div>
            <h4>Please enter new password</h4>
            <form method="post">
               
                <div class="resetpwd-wrapper">
                    <div class="passwordinfo"><span>Password should have atleast 8 characters.</span></div>
                    <div class="form-group">
                        <label for="fname" class="required">New Password <span class="asterisk">*</span></label>
                        <div class="inputs-group">
                            <input class="form-control" placeholder="Please enter new password" id="psw" asp-for="Password" />
                            <i class="pwdhidenshow eye-close" aria-hidden="true" id="pwdhideshow"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="EmailOrPhone" />
                    <div class="form-group">
                        <label class="required" for="lname">Confirm Password <span class="asterisk">*</span></label>
                        <div class="inputs-group">
                            <input asp-for="ConfirmPassword" class="form-control" id="cpsw" placeholder="Please enter new Password" />
                            <i class="pwdhidenshow eye-close" aria-hidden="true" id="cpwdhideshow"></i>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="regbtn-block">
                        <input type="submit" class="btn btn-submit" value="Change Password" id="submit" />
                        <a asp-action="Login" asp-controller="Account"><img src="~/images/right-arrow.svg" /> Back to Login</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



