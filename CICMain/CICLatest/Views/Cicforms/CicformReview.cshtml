@{ ViewData["Title"] = "Form review"; }

<div class="CicFormreview-wrapper">
    <div class="CicFormreview-inner">
        <div class="review-icon">
            <img src="~/images/review-icon.svg" alt="" />
        </div>
        <div class="review-block">
            <h2>Under review</h2>
            <p>Thank you for filling in. we verify the credentials now and will inform you once you can make full use of the customer portal</p>

            <small>This usually takes 1 business day</small>
        </div>
        <div class="btn-action">
            <a  class="btn btn-finish" asp-action="Index" asp-controller="Home" >Finish</a>
        </div>
        
    </div>
</div>