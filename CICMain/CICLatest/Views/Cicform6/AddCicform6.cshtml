<script type="text/javascript">

    $('#rereg').hide();
    function handleClick(myRadio) {
        var value = myRadio.value;



        if (value == 'Renewal') {

            $('#rereg').show();
            $('#newreg').hide();
            window.location.href = '/Cicform6/GetData?apptype=' + value;
        }
        else {

            $('#rereg').hide();
            $('#newreg').show();
        }
    }



</script>


